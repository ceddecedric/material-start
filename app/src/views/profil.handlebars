                                                <br><br>
                                                <label for="labelpassword">Password : </label>
                                                <input class="mdl-textfield__input" type="password" id="editPassword" value="{{user.password}}"/>
                                                <input type="hidden" name="idUsers" id="idUsers" value="{{user._id}}">
                                            </div>
                                                <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" style="width: 100px;" id="btnProfil" >OK</button>
                                        </div>
                            </div>
                    </div>
                </div>
            </div>
            <div class="mdl-cell--3-col"></div>

        </div>
<br>

