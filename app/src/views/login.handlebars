<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/bower_components/materialize/dist/css/materialize.min.css">
    <link rel="stylesheet" href="/app/jspm_packages/github/angular/bower-material@master/angular-material.css"/>
    <link rel="stylesheet" href="/style.css">
    <title>Qwirk</title>
</head>
<body class="start">

<nav class="headnav" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="/" class="brand-logo">Qwirk</a>
        <ul class="right hide-on-med-and-down">
            <li><a href="/inscription">S'inscrire</a></li>
            <li><a href="/login">Se connecter</a></li>
        </ul>

        <ul id="nav-mobile" class="side-nav" style="transform: translateX(-100%);">
            <li><a href="/inscription">S'inscrire</a></li>
            <li><a href="/login">Se connecter</a></li>
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
</nav>

<div class="container">
    <div class="section pad-head">
        <div class="row">
            <div class="col s12 m3">
            </div>
            <div class="col s12 m6">
                <div class="form_container center ">
                    <form method="post" action="">
                        <fieldset name="formulaire" id="formulaire">
                            <legend class="legend">FORMULAIRE DE CONNEXION</legend>
                            {{#if success_msg}}
                            <div class="card-panel teal lighten-2">{{success_msg}}</div>
                        {{/if}}
                            {{#if error_msg}}
                                <div class="card-panel red darken-1">{{error_msg}}</div>
                            {{/if}}
                            {{#if error}}
                                <div class="card-panel orange darken-1">{{error}}</div>
                            {{/if}}
                            <p>
                                <label for="username">Email</label>
                                <br>
                                <input type="email" name="username" id="username">
                                <br>
                                <label for="password">Password</label>
                                <br>
                                <input type="password" name="password" id="password">
                                <br>
                                <input id="login_button" type="submit" value="Login" class="btn-large waves-effect waves-light green">
                            </p>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Compiled and minified JavaScript -->
<script src="/bower_components/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="/bower_components/materialize/dist/js/materialize.js" type="text/javascript"></script>
<script src="/app/assets/ressource/script.js" type="text/javascript"></script>
<script src="/app/jspm_packages/system.js" type="text/javascript"></script>
<script src="/app/config.js" type="text/javascript"></script>
<script type="text/javascript">
    System
            .import('src/boot/boot')
            .catch( console.error.bind(console) ); // make sure any errors print to console

</script>


</body>